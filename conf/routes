# Routes
# This file defines all application routes (Higher priority routes first)
# https://www.playframework.com/documentation/latest/ScalaRouting
# ~~~~

GET     /account/find/*companyID/*id              controllers.AccountController.findAccount(companyID: Int, id: Int)
GET     /account/getAllAccounts/*companyID        controllers.AccountController.getAllAccounts(companyID: Int)
POST    /account/repsert                          controllers.AccountController.repsert
POST    /account/delete                           controllers.AccountController.delete


GET    /accountingEntry/find/*companyID/*id/*accountingYear                               controllers.AccountingEntryController.findAccountingEntry(companyID: Int, id: Int, accountingYear: Int)
GET    /accountingEntry/findAccountingEntriesByYear/*companyID/*accountingYear            controllers.AccountingEntryController.findAccountingEntriesByYear(companyID: Int, accountingYear: Int)
POST   /accountingEntry/repsert                                                           controllers.AccountingEntryController.repsert
POST   /accountingEntry/delete                                                            controllers.AccountingEntryController.delete


GET    /accountingEntryTemplate/find/*companyID/*description                       controllers.AccountingEntryTemplateController.findAccountingEntryTemplate(companyID: Int, description: String)
GET    /accountingEntryTemplate/getAllAccountingEntryTemplates/*companyID          controllers.AccountingEntryTemplateController.getAllAccountingEntryTemplates(companyID: Int)
POST   /accountingEntryTemplate/repsert                                            controllers.AccountingEntryTemplateController.repsert
POST   /accountingEntryTemplate/delete                                             controllers.AccountingEntryTemplateController.delete
