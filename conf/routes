# Routes
# This file defines all application routes (Higher priority routes first)
# https://www.playframework.com/documentation/latest/ScalaRouting
# ~~~~

GET     /account/find/*id               controllers.AccountController.findAccount(id: Int)
GET     /account/getAllAccounts         controllers.AccountController.getAllAccounts
POST    /account/repsert                controllers.AccountController.repsert
POST    /account/delete                 controllers.AccountController.delete


GET    /accountingEntry/find/*id/*accountingYear                               controllers.AccountingEntryController.findAccountingEntry(id: Int, accountingYear: Int)
GET    /accountingEntry/findAccountingEntriesByYear/*accountingYear            controllers.AccountingEntryController.findAccountingEntriesByYear(accountingYear: Int)
POST   /accountingEntry/repsert                                                controllers.AccountingEntryController.repsert
POST   /accountingEntry/delete                                                 controllers.AccountingEntryController.delete


GET    /accountingEntryTemplate/find/*description                       controllers.AccountingEntryTemplateController.findAccountingEntryTemplate(description: String)
GET    /accountingEntryTemplate/getAllAccountingEntryTemplates          controllers.AccountingEntryTemplateController.getAllAccountingEntryTemplates
POST   /accountingEntryTemplate/repsert                                 controllers.AccountingEntryTemplateController.repsert
POST   /accountingEntryTemplate/delete                                  controllers.AccountingEntryTemplateController.delete
